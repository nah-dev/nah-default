include ../samples/_base

//- This structure page uses a pug mixin to generate <nah:site-element> nodes
//- but also let you put sample content in them for sample pages.
#container.lyt
  #container2.lyt
    #container3.lyt
      #header.lyt
        #title.lyt
          h1.lyt
            a(hpref='/')
              +element()(content="Text" type="tagline")
                = sampleTitle || "Sample site title"
          #tagline.lyt
            +element()(content="Text" type="tagline")
              = sampleTagline || "Sample site tagline goes here."
        #header-zone.lyt
          +element()(content='Text' title='Header' type='zone')
            block header
      #main.lyt
        #main-menu.lyt
          +element(content='Main menu,Menus' title='Main menu' type='zone')
            block mainMenu
              include ../samples/_sampleMenu
        #content.lyt
          #content-top.lyt
            +element()(content='Text,Menus' title='Content top' type='zone')
              block contentTop
          #content-main.lyt
            +element()(type='content')
              block content
                | Site content will go here.
        #sidebar.lyt
          .lyt.col
            .lyt.zone
              +element()(content='Text,Menus,Dynamic' heading='true' title='Sidebar 1' type='zone')
                block sidebar1
            .lyt.zone
              +element()(content='Text,Menus,Dynamic' heading='true' title='Sidebar 2' type='zone')
                block sidebar2
          .lyt.col
            .lyt.zone
              +element()(content='Text,Menus,Dynamic' heading='true' title='Sidebar 3' type='zone')
                block sidebar3
            .lyt.zone
              +element()(content='Text,Menus,Dynamic' heading='true' title='Sidebar 4' type='zone')
                block sidebar4
      #footer.lyt
        +element()(content='Text' title='Footer' type='zone')
          p
            block footer
              = sampleFooter || "Sample footer goes here."
